#!/bin/bash

# support for i18n and L10n
. gettext.sh
export TEXTDOMAIN=package-management-wrapper

# check online status
if ! wget --spider http://ftp.ch.debian.org
then
	ERROR_MESSAGE="$(gettext "A working internet connection is needed to install or upgrade software packages.\nUnfortunately, the connection to the Internet failed.\nPlease make sure that your ethernet or wireless connection is correctly set up.")"
	if systemctl status lernstick-firewall > /dev/null
	then
		ERROR_MESSAGE="${ERROR_MESSAGE}\n$(gettext "In addition to that you should also temporarily disable the firewall in the\nLernstick Welcome application.")"
	fi
	# TODO: remove --no-wrap option once zenity is fixed, see
	# https://bugs.launchpad.net/ubuntu/+source/zenity/+bug/1206760
	zenity --no-wrap --error --text="${ERROR_MESSAGE}"
        exit 0
fi

# gracefully stop unattended upgrades
(
while pgrep -f /usr/bin/unattended-upgrade > /dev/null
do
	/usr/share/unattended-upgrades/unattended-upgrade-shutdown
	sleep 3
done
) |
zenity \
	--progress \
	--pulsate \
	--auto-close \
	--no-cancel \
	--title="$(gettext "Please wait")" \
	--text="$(gettext "Finishing unattended upgrades...")"

# upgrade package information
(
apt-get update
) |
zenity \
	--progress \
	--pulsate \
	--auto-close \
	--no-cancel \
	--title="$(gettext "Please wait")" \
	--text="$(gettext "Updating package information...")"

# repair dpkg if needed
if [ "${PIPESTATUS[0]}" != "0" ]
then
	xterm -e 'dpkg --configure -a'
fi

# start wrapped program
$@
